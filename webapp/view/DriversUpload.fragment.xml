<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified">
	<Dialog title="Criar Motoristas em Massa" class="sapUiPopupWithPadding" contentWidth="600px" id="uploadDriverDialog" resizable="true" draggable="true" >
		<Label text="Arquivo para Upload" required="true"/>
			<u:FileUploader id="fileUploader" multiple="false" useMultipart="false" width="100%" name="myFileUpload" uploadUrl="/sap/opu/odata/sap/ZGTWHR032_MOTORISTA_SRV/E_AnexosSet" placeholder="Importar arquivo preenchido" uploadComplete="handleUploadComplete" fileType="xlsx" />
        <Toolbar>
			 <Button id="btnMessages" text="Log do import" tooltip="Messages" icon="sap-icon://message-popup" press="handleUploadMessagesPress" type="Emphasized"/>                                            
		<ToolbarSpacer/>
			<Button id="btnExport" text="Exportar Template" tooltip="Export" icon="sap-icon://excel-attachment" press="handleExportTemplate" type="Accept" class=""/>
		</Toolbar>
		<beginButton>
			<Button id="btnImport" text="Importar" press="handleUploadDrivers" visible="true" type="Emphasized"/>
		</beginButton>
		<endButton>
			<Button id="btnCancelUpload" text="Cancelar" press=".onCloseDialogUploadDriver" visible="true"/>
		</endButton>
		
	</Dialog>
</core:FragmentDefinition>